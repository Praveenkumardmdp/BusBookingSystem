@{
    ViewBag.title = "ChangePassword";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title - Bus Booking System</title>
    <link rel="stylesheet" href="~/css/ChangePassword.css" type="text/css">
</head>
<body>
    <header>
        <div class="header">
            <p class="logo"><a href="">Aspire Bus</a></p>
            <p class="ChangePassword"><a asp-action="ChangePassword" asp-controller="Edit">Change Password</a></p>
            <p class="ChangePhoneNumber"><a asp-action="ChangePhoneNumber" asp-controller="Edit">Change PhoneNumber</a></p>
            <p class="ChangeEmail"><a asp-action="ChangeEmail" asp-controller="Edit">Change Email</a></p>
            <p class="back"><a asp-action="HomePage" asp-controller="Client">Back</a></p>
        </div>
    </header>
    <main>
        <div class="main">
            <div class="innerdiv">
                <h2>Change Password</h2>
                <form  action="~/Edit/ChangePassword" method="post" enctype="application/x-www-form-urlencoded"> @*action="~/Edit/ChangePassword"*@
                    <div>
                        <label for="username">UserName</label>
                        <input type="text" id="username"  name="username"  required> @*value="@ViewBag.getusername" readonly*@
                    </div>
                    <div>
                        <label for="password">Old Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div>
                        <label for="newpassword">New Password</label>
                        <input type="password" id="newpassword" name="newpassword" required>
                    </div>
                    <div class="button"><button type="submit" class="button">Submit</button></div>
                    @* <div class="button"><input type="submit" class="button1" value="Submit"></div> *@
                </form>
            </div>
        </div>
    </main>
    <footer>
        <div class="copyrights">Â© 2023 Aspire Bus Booking System. All rights reserved.</div>
    </footer>
</body>
</html>