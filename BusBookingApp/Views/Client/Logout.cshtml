@{
    ViewBag.Title = "Logout";
    Layout="Accountlayout";
}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - Bus Booking </title>
    <style>
      *{
      padding:0px;
      margin:0px;
      }
      body {
        background-color: #f2f2f2;
        font-family: Arial, sans-serif;
      }
      main{
        height: 70%;
        width: 100%;
      }
      @* header{
        background-color: #2c2b2b;
        height: auto;
        max-width: 1920px;
      }
      select{
        float: right;
        margin: 10px;
        border-radius: 10%;
        padding: 5px;
        background-color: #2c2b2b;
        color: #f4edf5;
        font-weight: bold;
      } *@
      .container {
        margin: 70px auto 70px auto;
        max-width: 600px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px #ccc;
      }
      h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #000;
      }
      button {
        padding: 10px 20px;
        background-color: #f00;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
      }  
      button:hover {
        background-color: #c00;
      }
    </style>
  </head>
  <body>
    @* <header>
      <div>
        <select onchange="location = this.value;">
          <option selected >UserName</option>
          <option value="https://localhost:7121/Client/GetMyAccount" >My Account</option>
          <option value="https://localhost:7121/connect/Settings" >Settings</option>
          <option value="https://localhost:7121/Client/Logout" >Logout</option>                
        </select>
      </div>
    </header> *@
    <main>
      <div class="container">
        <h2>Are you sure you want to logout?</h2>
        <div class="logout">
          <form action="~/Home/Index">
            <button>LOGOUT</button>
          </form>
        </div>
        
        @* <a  class="button" asp-area="" asp-controller="Main" asp-action="Index">LOGOUT</a> *@
      </div>
    </main>
  </body>
</html>
