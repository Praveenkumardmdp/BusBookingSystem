@{
    ViewBag.Title="Aspire Bus";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - BUS BOOKING WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RegisterAndLogin.styles.css" asp-append-version="true" />
    <style>
        * {
            box-sizing: border-box;
        }
        
        .container-fluid{
            background-attachment: fixed;
            background-color: #333;
            width: 100%;
        }
        .navbar .nav-link {
            color: #f4edf5 !important;
            font-weight: bold;
            @* background-color: #2c2b2b; *@
            font-size:21px;
        }
        header{
            background-color: #2c2b2b;
        }
        .navbar .nav-link:hover {
            border-bottom: solid 6px rgb(237, 232, 238);
        }
        .navbar-brand{
            border-radius: 10mm;
            border-color: black;
            background-color: #e4e0e0;
            padding: 5px 10px;
            font-weight: bold;
            font-size: 30px;
            color: #333;
        }
        .navbar {
            padding: 0%;
        }
        .footer {
            background-color: #e424da;
            color: #fff;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
        .footer p{
            padding-top: 5px;
        }
        select{
            margin: 10px;
            border-radius: 10%;
            padding: 5px;
            background-color: #2c2b2b;
            color: #f4edf5;
            font-weight: bold;
        }
        .last{
            margin: auto 0px auto auto;
        }
        .last select{
            background-color: transparent;
            border-color: transparent;
        }
        .last option{
            color: rgb(0, 0,0);
        }
    </style>
</head>
<body>
    <header style="position: sticky;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="margin-bottom:0px;">
            <div class="container-fluid">  
                <a class="navbar-brand" asp-area="" asp-controller="Client" asp-action="getHome"><strong>A Bus</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  style="color:white;"class="nav-link" asp-area="" asp-controller="Client" asp-action="getHome">Book Tickets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Client" asp-action="getBookedbus">My Bookings</a>
                        </li>
                        
                        <li class="nav-item lastbefore">
                            <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Help">Help</a>
                        </li>
                        <li class="nav-item last">
                            <select onchange="location = this.value;" >
                                <option selected >@ViewBag.username</option>
                                <option value="https://localhost:7128/Client/GetMyAccount" >My Account</option>
                                <option value="https://localhost:7128/Edit/ChangePassword" >Settings</option>
                                <option value="https://localhost:7128/Client/Logout" >Logout</option>                
                            </select>
                            @* <a class="nav-link" style="margin-left: 780px;" asp-area="" asp-controller="Client" asp-action="GetMyAccount">Profile</a> *@
                        </li>
                    </ul>

                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <div class="footer">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <p align="center">© Copyrights 2023 Bus Booking Web  </p>
            </div>
        </nav>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

