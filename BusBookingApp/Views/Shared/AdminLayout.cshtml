@{
    Layout=null;
}
<!DOCTYPE html>
<html>
    <head>
        <style>
            *{
                padding:0px;
                margin:px;
                box-sizing: border-box;
            }
            .layout
            {
                height:50px;
                width:100%;                
                background-color: rgb(101, 16, 101);
                color: black;
                line-height: 50px;
                display: flex;
            }
           a
            {
                margin-left:30px;
                text-decoration-line: none;               
                color:black;
                font-size: 25px;               
                
            }
            .layout select 
            {
                background-color: transparent;
                font-size:25px ;
                border-color: transparent;
            }
            footer {
                background-color: #333;
                color: #fff;
                padding: 10px 20px;
                bottom: 0%;
                position:absolute;
                width: 100%;
                height: 100px;
                margin-top: -100px;
            }
        </style>
    </head>
    <body style="margin:0px;">
        <div class="layout">
            <div class="layout1">
                <select onchange="location = this.value;" style="margin-left:30px ;">
                    @* <option selected>Add Bus</option> *@
                    <option value="https://localhost:7121/Admin/AddBus">Add Bus</option>
                    <option value="https://localhost:7121/Admin/RemoveBus" >Remove Bus</option>
                    <option value="https://localhost:7121/Admin/EditBus" >Change Bus Details</option>                
                </select>       
            </div>
            <div class="layout2">     
                @* <a asp-controller="connect" asp-action="CustomerSupport" >Custommer Support</a> *@
                <select onchange="location = this.value;" style="margin-left:980px ;">
                    <option selected >Admin</option>
                    <option value="https://localhost:7121/Client/Logout" >Logout</option>                
                </select>
            </div>
        </div>
    </body>
    <main role="main" class="pb-3">
            @RenderBody()
    </main>
    
</html>